@model EjemploPersona.Models.Persona
@{
    ViewBag.Title = "Persona";
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.items;
}

<h2>Datos de la persona: @ViewBag.Nombre </h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Id)
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Nombre
                    </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Nombre, htmlAttributes: new { @class = "form-control", @id = "txtNombre" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Apellido
                    </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Apellido, htmlAttributes: new { @class = "form-control", @id = "txtApellido" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Sexo
                    </label>
                    <div class="col-sm-6">
                        @Html.DropDownList("IdSexo", items, "Seleccione sexo...", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Dni
                    </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Dni, htmlAttributes: new { @class = "form-control", @id = "txtDni" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">
                        Edad
                    </label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.Edad, htmlAttributes: new { @class = "form-control", @id = "txtNombreUsuario" })
                    </div>
                </div>
                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-primary" type="submit">
                            Actualizar datos
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
